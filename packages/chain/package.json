{
  "name": "@4meta5/chain",
  "version": "0.2.0",
  "description": "Declarative skill chaining for Claude Code workflows",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "chain": "./bin/chain.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "chains"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:property": "vitest run --config vitest.property.config.ts",
    "test:all": "vitest run && vitest run --config vitest.property.config.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "ai",
    "skills",
    "workflow",
    "chain",
    "dag",
    "orchestration"
  ],
  "author": "Amar Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4meta5/skills.git",
    "directory": "packages/chain"
  },
  "homepage": "https://github.com/4meta5/skills#readme",
  "bugs": {
    "url": "https://github.com/4meta5/skills/issues"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "glob": "^11.0.0",
    "yaml": "^2.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "fast-check": "^4.5.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}

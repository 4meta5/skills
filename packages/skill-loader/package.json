{
  "name": "@4meta5/skill-loader",
  "version": "1.0.0",
  "description": "Parse and load SKILL.md files for Claude Code skills",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:property": "vitest run --config vitest.property.config.ts",
    "test:all": "vitest run && vitest run --config vitest.property.config.ts",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "skills",
    "skill-loader",
    "markdown",
    "frontmatter",
    "yaml"
  ],
  "author": "Amar Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4meta5/skills.git",
    "directory": "packages/skill-loader"
  },
  "homepage": "https://github.com/4meta5/skills#readme",
  "bugs": {
    "url": "https://github.com/4meta5/skills/issues"
  },
  "dependencies": {
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^4.5.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
